<?xml version="1.0"?>
<dc-workflow workflow_id="cvfolder_dx_workflow" title="CV Folder Dexterrity Workflow" description=" - A cv folder dexterity workflow where content is only accessible for the owner logged in. - Basic states are: Editable and not Editable." state_variable="review_state" initial_state="editable" manager_bypass="False">
 <permission>Access contents information</permission>
 <permission>Change portal events</permission>
 <permission>Copy or Move</permission>
 <permission>Delete objects</permission>
 <permission>Modify portal content</permission>
 <permission>Modify view template</permission>
 <permission>View</permission>
 <permission>matem.planning: Add Plan Folder</permission>
 <permission>matem.planning: Modify Plan Folder</permission>
 <permission>matem.planning: View Plan Folder</permission>
 <permission>Add portal content</permission>
 <permission>eea.facetednavigation: Configure faceted</permission>
 <permission>List folder contents</permission>
 <state state_id="editable" title="Editable">
  <description>Can only be seen and edited by the owner.</description>
  <exit-transition transition_id="submit_noteditable"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Copy or Move" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify view template" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="eea.facetednavigation: Configure faceted" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="matem.planning: Add Plan Folder" acquired="True">
  </permission-map>
  <permission-map name="matem.planning: Modify Plan Folder" acquired="True">
  </permission-map>
  <permission-map name="matem.planning: View Plan Folder" acquired="True">
  </permission-map>
 </state>
 <state state_id="noteditable" title="Not Editable">
  <description>Visible to owner user, admin, not editable by the owner.</description>
  <exit-transition transition_id="submit_editable"/>
  <permission-map name="Access contents information" acquired="True">
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Copy or Move" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify view template" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
  <permission-map name="eea.facetednavigation: Configure faceted" acquired="True">
  </permission-map>
  <permission-map name="matem.planning: Add Plan Folder" acquired="True">
  </permission-map>
  <permission-map name="matem.planning: Modify Plan Folder" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="matem.planning: View Plan Folder" acquired="True">
  </permission-map>
 </state>
 <transition transition_id="submit_editable" title="Admin makes content editable" new_state="editable" trigger="USER" before_script="" after_script="">
  <description>Making an item editable means that it will not be visible to anyone but the owner and the site administrator.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=submit_editable" category="workflow" icon="">Make editable</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="submit_noteditable" title="Admin sends content to not editable state" new_state="noteditable" trigger="USER" before_script="" after_script="">
  <description>Not Editable the item makes it visible to owner and only admin makes edit.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=submit_noteditable" category="workflow" icon="">Make not Editable</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>

   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
